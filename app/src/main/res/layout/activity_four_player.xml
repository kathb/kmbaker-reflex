<!--http://stackoverflow.com/questions/7189784/how-to-fill-screen-with-four-buttons-with-the-table-layout by Felix Sept 28, 2015-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ualberta.kmbaker.kmbaker_reflex.useBuzzerActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="1"
            android:id="@+id/fourplayerbutton1"
            android:onClick="clickButton1"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="2"
            android:id="@+id/fourplayerbutton2"
            android:onClick="clickButton2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp"
            android:id="@+id/fourplayerbutton3"
            android:onClick="clickButton3"
            />
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:text="4"
            android:id="@+id/fourplayerbutton4"
            android:onClick="clickButton4"
            />
    </LinearLayout>
</LinearLayout>
